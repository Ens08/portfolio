---
// Import des images depuis le dossier assets/ticker
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

// Récupération des images du dossier assets/ticker
const logos = await Astro.glob('../assets/ticker/*');

// Duplicate the logos array to ensure we have enough items for a smooth loop
const duplicatedLogos = [...logos, ...logos, ...logos];
---

<div class="ticker-container">
  <div class="ticker">
    <div class="ticker-wrapper">
      {duplicatedLogos.map((logo, index) => (
        <div class="ticker-item">
          <Image 
            src={logo.default} 
            alt="Logo" 
            width={150} 
            height={50} 
            loading=lazy 
            decoding="async" 
          />
        </div>
      ))}
    </div>
    <div class="ticker-wrapper" aria-hidden="true">
      {duplicatedLogos.map((logo, index) => (
        <div class="ticker-item">
          <Image 
            src={logo.default} 
            alt="Logo" 
            width={150} 
            height={50} 
            class="ticker-logo"
            loading=lazy
            decoding="async" 
          />
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .ticker-container {
    width: 100%;
    overflow: hidden;
    padding: 100px 0;
    background: inherit;
    position: relative;
  }

  .ticker {
    display: flex;
    width: fit-content;
    gap: 0;
    position: relative;
  }

  .ticker-wrapper {
    display: flex;
    animation: ticker 90s linear infinite;
    gap: 0;
    will-change: transform;
    transform: translateZ(0);
  }

  .ticker-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 2rem;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0);
  }

  .ticker-item img,
  .ticker-item :global(img) {
    height: 50px;
    width: auto;
    object-fit: contain;
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    transform: translateZ(0);
  }

  @keyframes ticker {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  /* Preload all images to prevent loading gaps */
  @media (prefers-reduced-motion: no-preference) {
    .ticker-container::before {
      content: '';
      position: absolute;
      width: 0;
      height: 0;
      overflow: hidden;
      z-index: -1;
      pointer-events: none;
      background-image: none;
    }
  }
</style>

<script>
  // The preload script is no longer needed as Astro's Image component 
  // handles optimization automatically
</script>