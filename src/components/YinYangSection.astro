---
import { Image } from 'astro:assets';
import yinyang from '../assets/yingyang.png';
import mailImg from '../assets/mail.svg';
import { makeIssue } from 'astro:schema';
// Remove the Lucide import and use the SVG from assets
---

<section class="yinyang-section">
  <div class="container">
    <div class="yinyang-content">
      <div class="yinyang-image">
        <Image src={yinyang} alt="Yin Yang" width={200} height={200} />
      </div>
      <h2 class="yinyang-title">Dites m'en plus à propos de votre projet</h2>
      <div class="yinyang-buttons">
        <a href="mailto:contact@example.com" class="btn btn-email">
          <img src={mailImg.src} alt="Email" class="icon svg-white" />
          Par email
        </a>
        <a href="tel:+33000000000" class="btn btn-phone">
          Par téléphone
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .yinyang-section {
    padding: 10rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .yinyang-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .yinyang-image {
    width: 120px;
    height: 120px;
    margin-bottom: 1rem;
  }

  .yinyang-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .yinyang-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    max-width: 800px;
    line-height: 1.2;
  }

  .yinyang-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.25rem;
    border-radius: 2rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 180px;
  }

  .btn-email {
    background-color: #e63946;
    color: white;
  }

  .btn-phone {
    background-color: transparent;
    color: #333;
    border: 1px solid #333;
  }

  .icon {
    margin-right: 0.5rem;
    width: 20px;
    height: 20px;
  }
  
  /* Filtre pour rendre le SVG blanc */
  .svg-white {
    filter: brightness(0) invert(1);
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .yinyang-title {
      font-size: 2rem;
    }

    .yinyang-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    .btn {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .yinyang-title {
      font-size: 1.75rem;
    }

    .yinyang-image {
      width: 80px;
      height: 80px;
    }
  }
</style>